<div class="modal fade" id="addContactModalCenter" tabindex="-1" role="dialog" aria-labelledby="addContactModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          
          <div class="modal-header">
            <h5 class="modal-title" id="addContactModalLongTitle">Add Contact Details: </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          
          <div class="modal-body">
            <%= form_for :user_contacts, url: {action: "create"}, :html => { :id => "contact-create-form", :method => :post}, :remote => true do |p| %>
              <%= p.hidden_field :user_id, :value => current_user.id %>
              
              <div class="form-row">
                <div class="form-group col-md-6"> 
                  First Name*: <%= p.text_field :first_name, :class => "form-control" %> 
                </div> <br/>
                <div class="form-group col-md-6"> 
                  Last Name*: <%= p.text_field :last_name, :class => "form-control" %> 
                </div><br/>
              </div>

              <div class="form-group"> 
                Email*: <%= p.text_field :email, :class => "form-control" %> 
              </div>

              <div class="form-group"> 
                Phone*: <%= p.text_field :phone_number, :class => "form-control" %> 
              </div>

              <div class="form-group"> 
                Address: <%= p.text_field :address, :class => "form-control"%> 
              </div>

              <div class="form-row">
                <div class="form-group col-md-6"> 
                  City: <%= p.text_field :city, :class => "form-control" %>
                </div>
                <div class="form-group col-md-6"> 
                  Postcode: <%= p.text_field :postcode, :class => "form-control" %>
                </div>
              </div>

              <div class="form-row">
                <div class="form-group col-md-6"> 
                  Birthdate: <%= p.text_field :birthdate, :class => "form-control" %>
                </div>
                <div class="form-group col-md-6"> 
                  Relationship: <%= p.text_field :relationship, :class => "form-control" %>
                </div>
              </div>
              
              <div class="form-group"> 
                Notes: <%= p.text_field :notes, :class => "form-control"%> 
              </div>

              <div id="mandatory-fields">
                * Mandatory fields
              </div>
              <div class="modal-footer">
                <%= p.submit "Submit", class: "btn btn-primary" %>
             </div>
            
          <% end %>
          </div>
    
      </div>
    </div>
  </div>